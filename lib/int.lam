#lib/base.lam
#lib/nat.lam
#lib/bool.lam

-- arith first order
INT::ADD     = (\a\b b NAT::SUCC a)
INT::SUB     = (\a\b b NAT::PRED a)

-- comparison
INT::IS-POS       = (\n n (BASE::CONST BOOL::TRUE) BOOL::FALSE)
INT::IS-GREATER   = (\a\b INT::IS-POS (INT::SUB a b))
INT::IS-LESSER    = (\a\b INT::IS-POS (INT::SUB b a))

-- arith second order
INT::MUL          = (\a\b a (INT::ADD b) NAT::ZERO)

-- reification
INT::PRINT   = (\x x ? ! x)
